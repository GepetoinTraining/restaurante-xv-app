// PATH: tsconfig.seed.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",                  // Keep CommonJS for Node execution
    "moduleResolution": "Node",           // Override to be compatible with CommonJS
    "outDir": "./prisma",                 // Output JS file next to TS file
    "rootDir": "./prisma",                // Specify root to include only prisma files
    "noEmit": false,                      // Allow emitting JS
    "isolatedModules": false,             // Required when emitting files like this
    "sourceMap": false                    // Disable sourcemaps for seed script
    // Remove "target" if inheriting is okay
  },
  // Make include path explicitly relative
  "include": ["./prisma/seed.ts"]
}