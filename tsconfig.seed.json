{
  // Inherit settings from the main tsconfig.json
  "extends": "./tsconfig.json",
  // Override settings specifically for running the seed script via ts-node
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS", // Use CommonJS for compatibility with ts-node script execution
      "target": "es2017" // Target can often be slightly older for scripts
    },
    // Ensure it can find the seed file
    "include": ["prisma/seed.ts"]
  },
  // We don't need compilation output options here usually
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",
    "noEmit": true // Ensure this doesn't try to output JS files
  }
}
