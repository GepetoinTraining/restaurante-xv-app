// PATH: tsconfig.seed.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS", // Keep CommonJS for Node execution
    "outDir": "./prisma", // Output JS file next to TS file (or a dedicated build dir)
    "rootDir": "./prisma", // Specify root to include only prisma files if needed
    "noEmit": false, // *** IMPORTANT: Allow emitting JS ***
    "isolatedModules": false, // May be needed when emitting files
    "sourceMap": false // Optional: disable sourcemaps for seed script
    // Remove "target" if inheriting from main tsconfig is sufficient
  },
  "include": ["prisma/seed.ts"] // Only compile the seed file with this config
}